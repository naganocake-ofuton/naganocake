<% provide(:title, "配送先登録/一覧") %>
<div class="row">
    <div class="col-xs-12">
        <h2 class="head-line text-center title_h2">配送先登録/一覧</h2>
        <div id="error">
          <%= render "layouts/error_messages", resource: @shipping %>
        </div>
        <%= form_with(model: @shipping, :url => {:controller => "customer/shippings"}, local: true) do |f| %>
            <div class="shipping col-xs-10">
                <div class="form-group col-xs-12">
                    <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
                    <%= f.text_field :postcode, class: "col-xs-4 form-control-static postcode" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
                    <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
                    <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
                </div>
                <%= f.submit '登録する' ,class: "col-xs-2 pull-right btn-lg btn-success " %>
            </div>
        <% end %>

　　　<!--renderdではなく直接書いてます-->
        <table class="table table-hover table-bordered">
          <thead>
            <tr class="info">
             <th>郵便番号</th>
             <th>住所</th>
             <th>宛名</th>
             <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
           <% @shippings.each do |shipping| %>
            <tr class="shipping-tr">
             <td>
                <%= shipping.postcode %>
             </td>
             <td class="text-left">
                <%= shipping.address %>
             </td>
             <td class="text-left">
                <%= shipping.name %>
             </td>
             <td>
                <%= link_to "編集する",edit_customers_shipping_path(shipping), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
             </td>
             <td>
                <%= link_to "削除する",customers_shipping_path(shipping), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "glyphicon glyphicon-trash btn-sm btn-danger" %>
             </td>
            </tr>
           <% end %>
          </tbody>
        </table>
    </div>
</div>