<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line text-center title_h2">配送先登録/一覧</h2>
  </div>
  <div id="error">

  </div>
  <%= form_with model:@shipping, local:true do |f| %>
    <div class="shipping col-xs-10">
      <div class="form-group col-xs-12">
        <label class="col-xs-3">郵便番号（ハイフンなし）</label>
        <%= f.text_field :postcode, class:"col-xs-4" %>
      </div>
      <div class="form-group col-xs-12">
        <label class="col-xs-3">住所</label>
        <%= f.text_field :address, class:"col-xs-7" %>
      </div>
      <div class="form-group col-xs-12">
        <label class="col-xs-3">宛名</label>
        <%= f.text_field :name, class:"col-xs-4" %>
      </div>
      <%= f.submit '登録する', class:"col-xs-2 btn-lg btn-success" %>
    </div>
  <% end %>
</div>
<div class=shipping-index>
  <table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @shippings.each do |shipping| %>
        <tr>
          <td>
            <%= shipping.postcode %>
          </td>
          <td>
            <%= shipping.address %>
          </td>
          <td>
            <%= shipping.name %>
          </td>
          <td>
            <!--customerとネスト化した後のeditリンク先に変更する-->
            <%= link_to "編集する", edit_shipping_path(shipping), class:"btn btn-primary" %>
          </td>
          <td>
            <!--customerとネスト化した後のdestroyリンク先に設定する-->
            <%= link_to "削除する", shipping_path(shipping), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
